extends layout

block content
    div(class="container")
        h1 Enter a new Question
        form#formAddQuestion(name="addquestion",method="post",action="/addquestion")

            input#inputQuestion(type="text", placeholder="Enter question", name="question", class="input-field")

            input#inputOption1(type="text", placeholder="Option 1", name="option1", class="input-field")

            input#inputOption2(type="text", placeholder="Option 2", name="option2", class="input-field")

            input#inputOption3(type="text", placeholder="Option 3", name="option3", class="input-field")

            input#inputOption4(type="text", placeholder="Option 4", name="option4", class="input-field")

            input#answer(type="text", placeholder="Answer", name="answer", class="input-field")

            input#category(type="text", placeholder="Category", name="category", class="input-field")


            button#btnSubmit(type="submit" class="btn") submit
